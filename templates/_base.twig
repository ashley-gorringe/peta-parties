{% set cacheVersion = "p1.1" %}

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="/css/base.min.css?v={{cacheVersion}}">
        <title>{{pageTitle}} - Peta's Party Planners</title>
	</head>
	<body>
		{{ include('components/modals.twig') }}
		<nav class="navbar">
			<div class="navbar__structure">
				<div class="navbar__logo">
					<a href="/">
					<img src="/assets/logo-colour.svg" alt="Petas Parties Logo." />
					</a>
				</div>
				<div class="navbar__menu">
					<ul class="navbar__account__items">
						{% if user %}
						<li><a href="#" id="openAccountModal">Hi, {{user.firstname}}</a></li>
						{% if basket %}
						<li><a class="navbar__account__basket" id="openBasketModal" href="#">Basket ({{basket.total}})</a></li>
						{% endif %}
						{% else %}
						<li><a href="#" id="openLoginModal">Log in</a></li>
						<li><a href="#" id="openRegisterModal">Register</a></li>
						{% endif %}
					</ul>
					<ul class="navbar__menu__items">
						<li><a{% if pageSlug == "homepage" %} class="active"{% endif %} href="/">Home</a></li>
						<li><a{% if pageSlug == "plans" %} class="active"{% endif %} href="/plans">Our Party Plans</a></li>
						<li><a{% if pageSlug == "shop" %} class="active"{% endif %} href="/shop">Shop</a></li>
						<li><a{% if pageSlug == "about" %} class="active"{% endif %} href="#">About us</a></li>
						<li><a{% if pageSlug == "contact" %} class="active"{% endif %} href="#">Contact us</a></li>
					</ul>
				</div>
			</div>
		</nav>
    	{% block body %}{% endblock %}
		<footer>
			<div class="container">
				<div class="row">
					<div class="col-12 col-lg-3 text-center text-lg-start">
						<img class="footer-logo" src="/assets/logo-colour.svg" alt="Petas Parties Logo." />
						<p class="footer-legal">Copyright &copy; Petaâ€™s Parties Ltd {{ 'now' | date('Y') }}. <br />All rights reserved.</p>
						<p class="footer-legal">Registered company #123456</p>
					</div>
					<div class="col-12 col-lg-3 text-center text-lg-start">
						<span class="footer-heading">Find us</span>
						<p class="footer-text">123 Pinecastle Rd, <br />Woodbourne, <br />West Raylea, <br />RA34 1KN</p>
					</div>
					<div class="col-12 col-lg-3 text-center text-lg-start">
						<span class="footer-heading">Contact us</span>
						<p class="footer-text">hello@petaparties.uk <br />01234 567 890</p>
						<ul class="footer-social">
							<li><a class="footer-social--facebook" href="#"><i class="fab fa-facebook-f"></i></a></li>
							<li><a class="footer-social--twitter" href="#"><i class="fab fa-twitter"></i></a></li>
							<li><a class="footer-social--instagram" href="#"><i class="fab fa-instagram"></i></a></li>
						</ul>
					</div>
					<div class="col-12 col-lg-3 d-none d-lg-block">
						<ul class="footer-menu">
							<li><a href="#">Home</a></li>
							<li><a href="#">About us</a></li>
							<li><a href="#">Customer Services</a></li>
							<li><a href="#">Returns</a></li>
							<li><a href="#">Terms & Conditions</a></li>
							<li><a href="#">Privacy Policy</a></li>
						</ul>
					</div>
				</div>
			</div>
		</footer>
		<script src="/js/jquery.min.js"></script>
		<script src="/js/splide.min.js"></script>
		<script src="/js/sweetalert.min.js"></script>
        <script src="/js/scripts.js?v={{cacheVersion}}"></script>
		{% if sliderScript == true %}
		<script>
		new Splide( '.splide', {
		  type   : 'loop',
		  arrows: false,
		  perPage: 1,
		  autoplay: true,
		} ).mount();
		</script>
		{% endif %}
	</body>
</html>
