{% extends "_base.twig" %}

{% set pageSlug = "" %}
{% set pageTitle = "Log in or Register" %}

{% block body %}
<div style="height:100px;"></div>
<section class="background--light">
	<div class="container">
		<div class="row">
			<div class="col-12 col-lg-6 text-center text-lg-start">
				<h2>Book a Party</h2>
				<p class="lead">Let's get this party started!</p>
				<p>You'll need to login or register a new account with us to continue. If you've already got an account, click below to log in.</p>
				<a href="#" class="button">Log in</a>
			</div>
			<div class="col-12 col-lg-5 offset-lg-1">
				<div class="card">
					<h3>Create an Account</h3>
					<div class="form-group">
						<label>Email Address</label>
						<input class="form-control" type="email" />
					</div>
					<div class="form-group">
						<label>Password</label>
						<input class="form-control" type="password" />
					</div>
					<div class="form-group">
						<button type="submit" class="button">Create</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}
