<section class="background--green">
	<div class="container">
		<div class="row">
			<div class="col-12 col-lg-8">
				<h2>Featured Products</h2>
				<p class="lead">Putting together your own occassion? We can supply you with everything you need to make your party perfect!</p>
			</div>
		</div>
		<div class="product-grid product-grid--light">
			{% for product in products %}
			<a href="/shop/{{product.productid}}" class="product-grid__item">
				<div class="product-grid__item__image" style="background-image:url(/images/products/{{product.image}})"></div>
				<div class="product-grid__item__content">
					<span class="product-grid__item__name">{{product.title}}</span>
					<span class="product-grid__item__price">Â£{{product.price|number_format(2,'.')}}</span>
				</div>
			</a>
			{% endfor %}
		</div>
		<div class="row mt-5">
			<div class="col-12">
				<a href="/shop" class="button">All Products</a>
			</div>
		</div>
	</div>
</section>
<section class="background--light">
	<div class="container">
		<div class="row">
